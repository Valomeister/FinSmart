<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FinSmart" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Цвет кнопок по умолчанию -->
        <item name="colorPrimary">#7D7AFF</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#4D4D4D</item>
        <item name="android:textColorPrimary">#4D4D4D</item>
        <item name="android:textColorSecondary">#FF0000</item>
        <item name="android:textColorHint">#595959</item>

        <!-- Цвет текста обычного CheckBox -->
        <item name="colorControlNormal">#4D4D4D</item>

        <!-- Цвет текста активного CheckBox -->
        <item name="colorControlActivated">#7D7AFF</item>

        <!-- Цвет заднего фона -->
        <item name="android:windowBackground">#FFFFFF</item>

        <item name="radioButtonStyle">@style/CustomRadioButton</item>

    </style>

    <style name="Theme.FinSmart" parent="Base.Theme.FinSmart" />

    <!-- Базовый стиль для RadioButton -->
    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_radio_button</item> <!-- Кастомный drawable -->
        <item name="android:buttonTint">@null</item> <!-- Отключаем Material tint -->
        <item name="android:textColor">@color/black</item> <!-- Цвет текста -->
    </style>
</resources>