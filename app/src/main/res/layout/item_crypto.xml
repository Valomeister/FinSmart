<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="24dp"
    android:id="@+id/cryptoBody"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">`
        <ImageView
            android:id="@+id/cryptoIcon"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/sber_icon"
            android:layout_marginEnd="14dp"/>
        <TextView
            android:id="@+id/cryptoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bitcoin"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/editButton"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/edit_icon"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    <!-- Сумма -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Сумма"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/cryptoConvertedSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="225 125,32 ₽"
            android:textSize="16sp"
            android:textColor="#7D7AFF"
            android:textStyle="bold" />
    </LinearLayout>


    <!-- Курс -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Курс"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/cryptoExchangeRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9 242 111,18 ₽"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Количество -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Объем"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/cryptoQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0,02467863 BTC"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Дата покупке -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Дата покупки"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/cryptoPurchaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28.02.2025"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Курс при покупке -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Курс покупки"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/cryptoPurchaseExchangeRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 231 688,22 ₽"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Динамика -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Динамика"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/cryptoExchangeRateDynamics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12,7 %"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>




</LinearLayout>