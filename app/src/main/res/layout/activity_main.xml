<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logo"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="18dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/gradient_delimeter"/>

    <!-- Контейнер для фрагментов -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="18dp"
        android:paddingBottom="0dp">

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.66" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/home_layout">
            <ImageView
                android:id="@+id/home_icon"
                android:layout_gravity="center_horizontal"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/home_icon_active"/>
            <TextView
                android:id="@+id/homeIconTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Главная"
                android:textSize="14dp"
                app:fontFamily="@font/roboto_medium"
                android:textColor="#7D7AFF"/>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/budget_layout">
            <ImageView
                android:id="@+id/budget_icon"
                android:layout_gravity="center_horizontal"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/budget_icon_inactive" />
            <TextView
                android:id="@+id/budgetIconTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Бюджет"
                android:textSize="14dp"
                app:fontFamily="@font/roboto_medium"
                android:textColor="#787878"/>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/operations_layout">
            <ImageView
                android:id="@+id/operations_icon"
                android:layout_gravity="center_horizontal"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/operations_icon_inactive" />
            <TextView
                android:id="@+id/operationsIconTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Операции"
                android:textSize="14dp"
                app:fontFamily="@font/roboto_medium"
                android:textColor="#787878"/>
        </LinearLayout>


        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/profile_layout">
            <ImageView
                android:id="@+id/profile_icon"
                android:layout_gravity="center_horizontal"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/profile_icon_inactive" />
            <TextView
                android:id="@+id/profileIconTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Профиль"
                android:textSize="14dp"
                app:fontFamily="@font/roboto_medium"
                android:textColor="#787878"/>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.66" />



    </LinearLayout>
</LinearLayout>