<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main_activity.profile_page.ProfilePageFragment"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="75dp"
            android:clipToOutline="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_image" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Валерий К."
            android:layout_gravity="center_horizontal"
            android:textSize="22sp"
            android:layout_marginVertical="24dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/gradient_delimeter"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/personalInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingHorizontal="32dp"
        android:paddingVertical="14dp">

        <ImageView
            android:id="@+id/personalInfoIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/profile_personal_info_icon"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/personalInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Личная информация"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dataManagementLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingHorizontal="32dp"
        android:paddingVertical="14dp"
        android:layout_marginTop="11dp">

        <ImageView
            android:id="@+id/dataManagementIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/profile_data_management_icon"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/dataManagementText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Управление данными"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settingsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingHorizontal="32dp"
        android:paddingVertical="14dp"
        android:layout_marginTop="11dp">

        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/profile_settings_icon"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/settingsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Настройки"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/supportLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingHorizontal="32dp"
        android:paddingVertical="14dp"
        android:layout_marginTop="11dp">

        <ImageView
            android:id="@+id/supportIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/profile_support_icon"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/supportText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поддержка"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/logoutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingHorizontal="32dp"
        android:paddingVertical="14dp"
        android:layout_marginTop="11dp">

        <ImageView
            android:id="@+id/logoutIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/profile_logout_icon"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/logoutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выйти"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:textColor="#E2474A"/>
    </LinearLayout>



</LinearLayout>