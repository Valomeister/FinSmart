<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="24dp"
    android:id="@+id/depositBody"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">`
        <ImageView
            android:id="@+id/bankIcon"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/sber_icon"
            android:layout_marginEnd="14dp"/>
        <TextView
            android:id="@+id/depositBankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сбер"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/home_icon2"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/edit_icon"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    <!-- Сумма -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Сумма"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/depositSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="290 000 ₽"
            android:textSize="16sp"
            android:textColor="#7D7AFF"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Ставка -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Ставка"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/depositInterest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17%"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Дата заключения -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Дата заключения"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/depositDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19.12.2024"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Срок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Срок"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/depositDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 месяцев"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Автопролонгация -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Автопролонгация"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/depositProlongation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="есть"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Капитализация -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Капитализация"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/depositCapitalization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="есть"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>